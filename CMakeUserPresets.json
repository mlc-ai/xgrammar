{
  "version": 3,
  "vendor": {
    "user": {}
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Default build using native build tools",
      "hidden": false,
      "binaryDir": "${sourceDir}/out/build/default",
      "cacheVariables": {
        "Python_EXECUTABLE": "${sourceDir}/.venv/bin/python"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "default-windows",
      "displayName": "Default Config (Windows)",
      "hidden": false,
      "generator": "Visual Studio 18 2026",
      "binaryDir": "${sourceDir}/out/build/default",
      "cacheVariables": {
        "Python_EXECUTABLE": "${sourceDir}\\.venv\\Scripts\\python.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64",
      "displayName": "Windows x64 (VS2026)",
      "generator": "Visual Studio 18 2026",
      "binaryDir": "${sourceDir}/out/build/x64",
      "cacheVariables": {
        "CMAKE_GENERATOR_PLATFORM": "x64",
        "Python_EXECUTABLE": "${sourceDir}\\.venv\\Scripts\\python.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ]
}
